        "/api/taches/ajouterutilisateur": {
            "post": {
                "summary": "Créer un utilisateur",
                "tags": ["Utilisateur"],
                "description": "Permet de créer un utilisateur",
                "parameters": [
                    {
                        "in": "query",
                        "name": "nom",
                        "description": "Nom de l'utilisateur",
                        "schema": {
                            "type": "string",
                            "example" : "Raymond"
                        },
                        "required": true
                    },
                    {
                        "in": "query",
                        "name": "prenom",
                        "description": "Prénom de l'utilisateur",
                        "schema": {
                            "type": "string",
                            "example" : "Maxime"
                        },
                        "required": true
                    },
                    {
                        "in": "query",
                        "name": "courriel",
                        "description": "Courriel de l'utilisateur",
                        "schema": {
                            "type": "string",
                            "example" : "courriel@mail.com"
                        },
                        "required": true
                    },
                    {
                        "in": "query",
                        "name": "motdepasse",
                        "description": "Mot de passe de l'utilisateur",
                        "schema": {
                            "type": "string",
                            "example" : "qWeRtY123"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Création de l'utilisateur réussie",
                        "content": {
                            "application/json": {
                                "example": [
                                    {
                                        "message": "Utilisateur créé",
                                        "utilisateur": {
                                            "id": 6,
                                            "nom": "Utilisateur",
                                            "prenom": "Test",
                                            "courriel": "Courriel3@test.com",
                                            "cle_api": "a6e95789c04194c106a68067",
                                            "password": "$2b$10$QX3/3HM88IwYdxF33ElAzeyhVedA5Lfk17WNg3MFh66RRFlA4S93S"
                                        }
                                    }
                                ]
                            }
                        }
                    },
                    "500" : {
                        "description": "Erreur interne du serveur",
                        "content": {
                            "application/json": {
                                "example": [
                                    {
                                        "message": "Erreur interne"
                                    }
                                ]
                            }
                        }
                    }
                }
            }
        },
        "/api/taches/demandercle/": {
            "put": {
                "summary": "Récupérer une clé d'API",
                "tags": ["Utilisateur"],
                "description": "Récupérer une clé d'API d'un utilisateur",
                "parameters": [
                    {
                        "in": "query",
                        "name": "courriel",
                        "description": "Courriel de l'utilisateur",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "exemple" : "courriel@mail.com"
                        }
                    },
                    {
                        "in": "query",
                        "name": "motdepasse",
                        "description": "Mot de passe de l'utilisateur",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "exemple" : "qWeRtY123"
                        }
                    },
                    {
                        "in": "query",
                        "name": "regenerer",
                        "description": "Regénérer une nouvelle clé d'API",
                        "required": false,
                        "schema": {
                            "type": "boolean",
                            "exemple" : "true"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Clé d'API retrouvée avec succes",
                        "content": {
                            "application/json": {
                                "example": [
                                        {
                                            "cle_api": "cac70ffd52b572fb10310991122d82"
                                        }
                                ]
                            }
                        }
                    },
                    "500" : {
                        "description": "Clé d'API non retrouvée",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Erreur interne"
                                        }
                                    }
                                }   
                            }
                        }
                    }
                }
            }
        },




        "/api/taches/affichertaches": {
            "get": {
                "summary": "Récupérer les tâches d'un utilisateur",
                "tags": ["Tâches"],
                "description": "Récupérer toutes les tâches d'un utilisateur ou seulement celles qui sont pas terminées",
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "description": "cle_api suivi de la clé d'API de l'utilisateur",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "exemple" : "cle_api 1a89800ce7f97904a61f2212"
                        }
                    },
                    {
                        "in": "path",
                        "name": "toutes",
                        "description": "Déclare si on extraits les taches terminées aussi",
                        "required": false,
                        "schema": {
                            "type": "boolean",
                            "exemple" : "true"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Tâches retrouvée avec succes",
                        "content": {
                            "application/json": {
                                "example": [
                                    {
                                        "id": 7,
                                        "titre": "Titre de la tâche"
                                    }
                                ]
                            }
                        }
                    },
                    "500" : {
                        "description": "Tâches non retrouvée",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Erreur interne"
                                        }
                                    }
                                }   
                            }
                        }
                    }
                }
            }
        }
    }
